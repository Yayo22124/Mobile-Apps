<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_black">
    
    <ImageView
        android:id="@+id/imgPatito"
        android:contentDescription="@string/patito_description"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_patito"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/label_for_etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/etPhone"
        android:text="Número de teléfono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/imgPatito"
        android:textColor="@color/rose"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/label_for_etPhone"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/label_for_etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/etPassword"
        android:text="Contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/etPhone"
        android:textColor="@color/rose"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/label_for_etPassword"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginBottom="50dp"/>
    
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="220dp"
        android:backgroundTint="@color/rose"
        android:textColor="@color/white"
        android:text="Iniciar Sesión"
        android:padding="18dp"
        android:textSize="21dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginBottom="130dp"/>
    
    
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:textColor="@color/white"
        android:text="@string/txtregister_value"/>
    
    
</RelativeLayout>